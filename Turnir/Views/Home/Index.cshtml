@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var teams = Model.Teams;
    var firstTeam = teams.Any() ? teams[0] : null;
    var secondTeam = teams.Count() > 1 ? teams[1] : null;
    var thirdTeam = teams.Count() > 2 ? teams[2] : null;
}

@if (!teams.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the national socker tournament!</h1>
        <p class="lead">There are no teams in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Teams" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Team</a>
        </p>
    </div>
}

<div class="mb-5"></div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
       @if (firstTeam != null)
        {
        <div class="carousel-item active">
            <img class="d-block w-100" src="@firstTeam.TeamLogo" alt="@firstTeam.Name @firstTeam.City">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" asp-controller="Teams" asp-action="Details" asp-route-id="@firstTeam.Id">@firstTeam.Name @firstTeam.City Points: @firstTeam.PointsWin</a></h5>
            </div>
        </div>
        }
        <div class="carousel-item">
            @if (secondTeam != null)
            {
                <img class="d-block w-100" src="@secondTeam.TeamLogo" alt="@secondTeam.Name @secondTeam.City">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Teams" asp-action="Details" asp-route-id="@secondTeam.Id">@secondTeam.Name secondTeam.City Points: @secondTeam.PointsWin</a></h5>
                </div>
            }
        </div>
        <div class="carousel-item">
            @if (thirdTeam!=null)
            {
                <img class="d-block w-100" src="@thirdTeam.TeamLogo" alt="@thirdTeam.Name @thirdTeam.City">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Teams" asp-action="Details" asp-route-id="@thirdTeam.Id"> @thirdTeam.Name @thirdTeam.City Points: @thirdTeam.PointsWin</a></h5>
                </div>
            }
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>